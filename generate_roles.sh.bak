#!/usr/bin/env bash

# RTD Role Generator – Full Role Execution with Debug Validation

set -euo pipefail

RECIPE_URL="https://raw.githubusercontent.com/vonschutter/RTD-Setup/main/core/_rtd_recipies.info"
ROLE_BASE="./roles"
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m'

sanitize_role_name() {
	local raw="$1"
	printf "%s" "$raw" | tr '[:upper:]' '[:lower:]' | sed -E 's/[^a-zA-Z0-9]+/_/g; s/^_+|_+$//g'
	return
}

generate_role() {
	local func="$1"
	local role group_tag content
	echo "↪ Generating from: $func"

	# First line — confirm the function is accessible
	if ! declare -f "$func" >/dev/null; then
		printf "${YELLOW}⚠ Function missing: %s${NC}\n" "$func" >&2
		return
	fi
	
	echo "Sanitizing: ${func#recipe___}"
	role=$(sanitize_role_name "${func#recipe___}")
	echo "role=$role"
	group_tag=$(cut -d_ -f1 <<<"$role")
	echo "group_tag=$group_tag"
	
	if ! content=$(declare -f "$func"); then
		printf "${YELLOW}⚠ Skipping %s: function not found${NC}\n" "$func" >&2
		return
	fi
	
	echo "Creating: $ROLE_BASE/$role/tasks" "$ROLE_BASE/$role/defaults"	
	mkdir -p "$ROLE_BASE/$role/tasks" "$ROLE_BASE/$role/defaults"

cat > "$ROLE_BASE/$role/tasks/main.yml" <<EOF
---
- name: Install ${role} related tools
  block:
EOF

echo "1 Created: $ROLE_BASE/$role/tasks/main.yml"

	local pkg
	grep -E 'software::(from_snapcraft.io|from_flathub.org|add_native_package)[[:space:]]+[a-zA-Z0-9._:-]+' <<< "$content" |
	while read -r line; do
		case "$line" in
			software::from_snapcraft.io*)
				pkg=$(awk '{print $2}' <<< "$line")
				printf "    - name: Install %s via Snap\n      community.general.snap:\n        name: %s\n        state: present\n" "$pkg" "$pkg"
				;;
			software::from_flathub.org*)
				pkg=$(awk '{print $2}' <<< "$line")
				printf "    - name: Install %s via Flatpak\n      community.general.flatpak:\n        name: %s\n        state: present\n        remote: flathub\n" "$pkg" "$pkg"
				;;
			software::add_native_package*)
				pkg=$(awk '{print $2}' <<< "$line")
				printf "    - name: Install native package %s\n      ansible.builtin.package:\n        name: %s\n        state: present\n" "$pkg" "$pkg"
				;;
		esac
	done >> "$ROLE_BASE/$role/tasks/main.yml"

	printf "    - name: Display completion\n      ansible.builtin.debug:\n        msg: \"Done installing tools for %s\"\n" "$role" >> "$ROLE_BASE/$role/tasks/main.yml"
	printf "  tags: [%s]\n" "$group_tag" >> "$ROLE_BASE/$role/tasks/main.yml"
	
	echo "2 Created: $ROLE_BASE/$role/tasks/main.yml"

cat > "$ROLE_BASE/$role/defaults/main.yml" <<EOF
---
${role}_enabled: true
EOF

echo "3 Created: $ROLE_BASE/$role/defaults/main.yml"

cat > "$ROLE_BASE/$role/README.md" <<EOF
# Role: ${role}

Auto-generated from RTD recipe function.

## Usage

\`\`\`yaml
- hosts: localhost
  roles:
    - ${role}
\`\`\`
EOF

	echo "4 Created: $ROLE_BASE/$role/README.md"
	printf "${GREEN}✔ Created role: %s${NC}\n" "$role"
	
}

main() {
	mkdir -p "$ROLE_BASE"

	local rawfile normfile
	rawfile=$(mktemp)
	normfile=$(mktemp)

	if ! curl -fsSL "$RECIPE_URL" -o "$rawfile"; then
		printf "${RED}✘ Failed to download recipe file${NC}\n" >&2
		exit 1
	fi

	sed -e 's/recipe:_/recipe___/g' -e 's/:/__/g' "$rawfile" > "$normfile"

	# Load file in a clean Bash subprocess and emit list of valid functions
	mapfile -t funcs < <(bash -c "
		source \"$normfile\"
		declare -F | awk '{print \$3}' | grep '^recipe___'
	")

	# Load definitions in current shell
	# Load definitions
	source "$normfile"

	# Get all normalized recipe function names
	declare -a funcs
	mapfile -t funcs < <(compgen -A function | grep '^recipe__')
	

	for func in ${funcs[@]}; do
		if declare -f "$func" &>/dev/null; then
			printf "Processing: %s\n" "$func"
			type "$func" &>/dev/null || echo "⚠️ Not defined: $func"
			generate_role "$func"
		else
			printf "${YELLOW}⚠ Missing: %s was declared but not found${NC}\n" "$func" >&2
		fi
	done																																																																																																																										

	rm -f "$rawfile" "$normfile"
}

main "$@"

